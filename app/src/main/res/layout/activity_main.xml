<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
   >
    <EditText
        android:id="@+id/editTextBdt"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter BDT"
        android:layout_centerHorizontal="true"/>
    <Button
        android:id="@+id/textViewLabel"
        android:layout_below="@+id/editTextBdt"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Converted to Dollar"
        android:layout_centerHorizontal="true"
        android:onClick="conert"/>
    <EditText


        android:id="@+id/textViewDollar"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:textSize="50sp"
        android:layout_height="wrap_content"
        android:hint="USD"
        android:layout_below="@+id/textViewLabel"
        android:layout_centerHorizontal="true"/>



</RelativeLayout>
